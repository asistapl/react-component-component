{
  "name": "react-component-component",
  "version": "1.0.0",
  "description": "Declarative version of React.Component.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": ["css", "es", "lib", "umd"],
  "scripts": {
    "build": "nwb build-react-component",
    "start":
      "watch -p '{src/**/*.js,README.md,templates/*.html}' -c 'echo \"$(cat templates/header.html) $(render-markdown-js README.md) $(cat templates/footer.html)\" > index.html'"
  },
  "peerDependencies": {
    "react": "15.x || ^16.0.0"
  },
  "devDependencies": {
    "prettier": "^1.10.2",
    "nwb": "0.17.x",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "render-markdown-js": "^1.3.0",
    "watch-cli": "^0.2.2"
  },
  "author": "Ryan Florence",
  "license": "MIT",
  "repository":
    "https://github.com/ryanflorence/react-component-component",
  "keywords": ["react-component", "react"],
  "prettier": {
    "printWidth": 62
  }
}
